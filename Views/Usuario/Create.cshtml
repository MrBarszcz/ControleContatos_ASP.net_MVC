@using ControleContatos.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Cadastrar Usuario";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuario</h1>
</div>

<br/>

<form asp-controller="Usuario" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="Name">Nome</label>
        
        <input type="text" asp-for="Nome" class="form-control" id="Name" placeholder="Digite o nome">
        
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="Email">Email</label>
        
        <input type="text" asp-for="Email" class="form-control" id="Email" placeholder="Digite o email">
        
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="Login">Login</label>
        
        <input type="text" asp-for="Login" class="form-control" id="Login" placeholder="Digite o login para o usuário">
        
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="Perfil">Perfil</label>
        
        <select id="Perfil" asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Default">Usuário</option>
        </select>
        
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <div class="mb-3">
        <label for="Password">Senha</label>

        <div class="password-container">
        
            <input type="password" asp-for="Senha" class="form-control" id="Password" placeholder="Digite uma senha para login">

            <div class="eye-container" id="eye-container">
                <i class="bi bi-eye" id="eye-open"></i>
                <i class="bi bi-eye-slash d-none" id="eye-closed"></i>
            </div>
        </div>    

        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    
    
    <br/>
    
    <div class="d-flex gap-2">
        <a role="button" class="btn btn-danger w-50" asp-controller="Usuario" asp-action="Index">Cancelar</a>
        
        <button type="submit" class="btn btn-primary w-50">Enviar</button>
    </div>
</form>