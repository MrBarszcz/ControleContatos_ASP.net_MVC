@model ResetPasswordModel

@{
    Layout = "_LayoutDeslogada";
    ViewData[ "Title" ] = "Redefinir Senha";
}

@if (TempData["MessageError"] != null ) {
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>

        @TempData["MessageError"]
    </div>
    <br/>
}

<form asp-controller="Login" asp-action="SendResetPassword" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="Login">

        @Html.ValidationMessageFor( x => x.Login )
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="Email">

        @Html.ValidationMessageFor( x => x.Email )
    </div>



    <div class="d-flex gap-2">
        <a role="button" class="btn btn-danger w-50" asp-controller="Login" asp-action="Index">Cancelar</a>

        <button type="submit" class="btn btn-primary w-50">Redefinir</button>
    </div>
</form>

