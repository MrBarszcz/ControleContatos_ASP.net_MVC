@model ContatoModel

@{
    ViewData["Title"] = "Atualizar Contato";
}

<div class="text-center">
    <h1 class="display-4">Atualizar Contato</h1>
</div>

<br/>

<form asp-controller="Contato" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id"> @*Campo oculto para enviar o Id do contato*@
    
    <div class="mb-3">
        <label for="Name">Nome</label>

        <input type="text" asp-for="Nome" class="form-control" id="Name">
        
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="Email">Email</label>

        <input type="text" asp-for="Email" class="form-control" id="Email">

        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="phoneNumber">Celular</label>

        <input type="text" asp-for="Celular" class="form-control" id="phoneNumber">

        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <br/>

    <div class="d-flex gap-2">
        <a role="button" class="btn btn-danger w-50" asp-controller="Contato" asp-action="Index">Cancelar</a>

        <button type="submit" class="btn btn-primary w-50">Enviar</button>
    </div>
</form>